<UserControl x:Class="PROG6212_WPF.Views.SubmitClaimView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="10">
        <TextBlock Text="Submit Claim Form" FontSize="20" FontWeight="Bold" Margin="10"/>

        <!-- Form Fields -->
        <TextBlock Text="Hours Worked" />
        <TextBox Text="{Binding HoursWorked}" Width="200" />

        <TextBlock Text="Hourly Rate" />
        <TextBox Text="{Binding HourlyRate}" Width="200" />

        <TextBlock Text="Additional Notes" />
        <TextBox Text="{Binding AdditionalNotes}" Width="200" Height="100" TextWrapping="Wrap" AcceptsReturn="True"/>

        <!-- Document Upload -->
        <TextBlock Text="Supporting Document" Margin="0,10,0,0"/>
        <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
            <TextBlock Text="{Binding DocumentPath, StringFormat='Selected Document: {0}'}" Margin="0,0,10,0"/>
            <Button Content="Upload" Width="75" Command="{Binding UploadDocumentCommand}" />
        </StackPanel>

        <!-- Submit Button -->
        <Button Content="Submit Claim" Width="120" Margin="10" Command="{Binding SubmitClaimCommand}" />
    </StackPanel>
</UserControl>
