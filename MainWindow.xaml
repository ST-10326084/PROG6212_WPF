<Window x:Class="CLVD6212_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contract Monthly Claim System" Height="600" Width="1000">
    <Grid>
        <StackPanel>
            <!-- Navigation Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Dashboard" Width="100" Command="{Binding NavigateCommand}" CommandParameter="DashboardView"/>
                <Button Content="Submit Claim" Width="100" Command="{Binding NavigateCommand}" CommandParameter="SubmitClaimView"/>
                <Button Content="Verify Claims" Width="100" Command="{Binding NavigateCommand}" CommandParameter="VerifyClaimsView"/>
            </StackPanel>

            <!-- ContentControl to Display Different Views -->
            <ContentControl Content="{Binding CurrentView}" />
        </StackPanel>
    </Grid>
</Window>
